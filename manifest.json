{
    "manifest_version": 2,
    "name" : "Comi",
    "version" : "0.1.0",

    "default_locale" : "ko",
    "description": "언제든지 코미로 소통하세요!",
    "browser_action":{
        "default_icon":{
            "16":"icons/16.png"
        }
    },
    "background" : {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_scripts": [{
        "matches" : ["http://*/*", "https://*/*"],
        "js":[
            "scripts/content.js"
        ]
    }],
    "permissions":[
        "tabs"
    ]

}