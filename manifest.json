{
    "manifest_version": 2,
    "name" : "Comi",
    "version" : "0.1.0",

    "default_locale" : "ko",
    "description": "어느 사이트에서든 코미로 소통하세요!",
    "browser_action":{
        "default_icon":{
            "16":"icons/16.png"
        },
        "default_title" : "Comi",
        "default_popup" : "popup/popup.html"
    },
    "content_scripts": [{
        "matches" : ["http://*/*", "https://*/*"],
        "js":[
            "scripts/dist/content.js"
        ]
    }],
    "permissions":[
        "tabs"
    ]

}